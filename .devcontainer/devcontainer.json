{
  "name": "AI Factory v2.4",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/node:1": { "version": "20" },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": { "configureZshAsDefaultShell": true }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python", "charliermarsh.ruff", "njpwerner.autodocstring",
        "tamasfe.even-better-toml", "GitHub.copilot", "redhat.vscode-yaml"
      ],
      "settings": {
        "autoDocstring.docstringFormat": "google",
        "python.analysis.typeCheckingMode": "strict"
      }
    }
  },
  "postCreateCommand": "sudo chown -R vscode:vscode /home/vscode/.claude && sudo rm -rf .venv && npm install -g @anthropic-ai/claude-code && pip install uv && uv venv --allow-existing && uv pip install pre-commit ripgrep mutmut ruff mypy pytest rapidfuzz pyyaml && bash .claude/factory/setup_aliases.sh",
  "mounts": ["source=claude-config,target=/home/vscode/.claude"],
  "remoteUser": "vscode"
}